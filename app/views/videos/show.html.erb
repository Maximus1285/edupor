
<div class="container">
  <ol class="breadcrumb"><%= render_breadcrumbs tag: :li, separator: '' %></ol>

  <div class="row">
    <div class="col-md-12">
      <h4>
        <span class="title"><%= @video.title %></span>
        <div class="pull-right">
          <i class="glyphicon glyphicon-calendar"></i>
          <span><%= @video.short_date %></span>
        </div>
      </h4>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="embed-responsive embed-responsive-16by9">
        <iframe class="embed-responsive-item" src="<%= @video.embedded_link %>" allowfullscreen></iframe>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <h4>Presented by: <%= @video.presenter %></h4>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <h4>Description:</h4>
      <div><%= @video.description %></div>
    </div>
  </div>

</div>
