<div class="container">
  <div class="row">
    <div class="col-sm-2">
      <h1>Videos</h1>
    </div>

    <div class="col-sm-10">
      <%= form_tag videos_path, method: 'GET', id: 'search-form', class: 'navbar-form' do %>
        <div class="input-group pull-right">
          <%= search_field_tag :search, params[:search],
            size: 30, maxlength: 50, class: 'form-control', placeholder: 'Search',
            data: { autocomplete: autocomplete_video_title_videos_path } %>
          <div class="input-group-btn">
            <%= button_tag type: 'submit', class: 'btn btn-default' do %>
              <i class="glyphicon glyphicon-search"></i>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div id="videos-content">
    <%= render 'index', videos: @videos %>
  </div>
</div>
