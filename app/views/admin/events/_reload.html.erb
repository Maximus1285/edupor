$("ul.errors").html("")
<% if event.errors.any? %>
  <% event.errors.full_messages.each do |message| %>
    $("div.errors").append($("<div class='alert alert-danger'/>").html("<%= message.html_safe %>"));
  <% end %>
<% else %>
  $("#events-content").html("<%= escape_javascript(render 'index', events: events ) %>");
  $("#events-modal").modal("hide");
<% end %>
