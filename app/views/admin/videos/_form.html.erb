<%= form_for [:admin, video], remote: true, html: { style: 'display:inline;' } do |f| %>
  <div class="modal-body">
    <div class="errors"></div>
    <div class="form-group">
      <%= f.label :title, class: 'control-label' %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :link, class: 'control-label' %>
      <%= f.text_field :link, class: 'form-control' %>
    </div>
    <div class="row">
      <div class="form-group col-md-8">
        <%= f.label :presenter, class: 'control-label' %>
        <%= f.text_field :presenter, class: 'form-control' %>
      </div>
       <div class="form-group col-md-4">
        <%= f.label :year, class: 'control-label' %>
        <%= f.text_field :year, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :description, class: 'control-label' %>
      <%= f.text_area :description, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.check_box :active %>
      <%= f.label :active, class: 'control-label' %>
    </div>
  </div>
  <div class="modal-footer">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to 'Cancel', '#', class: 'btn btn-default', data: { dismiss: 'modal' } %>
  </div>
<% end %>
