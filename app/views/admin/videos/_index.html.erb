<table id="videos-table" class="table table-striped table-bordered" width="100%">
  <thead>
    <tr>
      <th>Title</th>
      <th>Link</th>
      <th>Presenter</th>
      <th>Date</th>
      <th>Actions</th>
    </tr>
  </thead>
  <% videos.each do |video| %>
    <tr class="<%= 'warning' unless video.active %>">
      <td><%= video.title %></td>
      <td><%= video.link %></td>
      <td><%= video.presenter %></td>
      <td><%= video.date %></td>
      <td>
        <%= link_to edit_admin_video_path(video), remote: true,
          class: 'btn btn-default btn-sm' do %>
          <span class="glyphicon glyphicon-pencil"></span>
        <% end %>
        <%= link_to admin_video_delete_path(video), remote: true,
          class: 'btn btn-danger btn-sm' do %>
          <span class="glyphicon glyphicon-trash"></span>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>

<script type="text/javascript">
  $(document).ready(function() {
     $('#videos-table').DataTable({
       retrieve: true,
       iDisplayLength: 50,
       columns: [
         { type: "string" },
         { type: "string" },
         { type: "string" },
         { type: "string" },
         { orderable: false }
       ]
    });
  });
</script>
